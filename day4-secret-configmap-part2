##we will store our secret inside k8s cluster using secret manager
   216  vi secret.yml
apiVersion: v1
kind: Secret
metadata:
  name: mysql-secret
type: Opaque # secret is supported in base64 encoding
data:
  password: ZGJwYXNzd29yZDEx

  217  kubectl apply -f secret.yml
    #get secret will show all the secret
  218  kubectl get secret
    #when you describe whatever data you have put insdie the secret manager will not be visible
  219  kubectl describe secret mysql-secret

    ###############lets crate the configmap
    221  vi configmap.yml
apiVersion: v1
kind: ConfigMap
metadata:
  name: user-config
data:
  mysql_usermgmt.sql: |-
    DROP DATABASE IF EXISTS usermgmt;
    CREATE DATABASE usermgmt;

  222  kubectl apply -f configmap.yml
  223  kubectl get configmap
    #if you desribe configmap you will see all the configuration database never store your secret or api key in configmap
  224  kubectl describe configmap user-config

